<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white">
    <item android:id="@android:id/mask">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/navy" />
                </shape>
            </item>
            <item
                android:bottom="8dp"
                android:drawable="@drawable/ic_timer"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </layer-list>
    </item>
    <item android:id="@android:id/background">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/navy" />
                </shape>
            </item>
            <item
                android:bottom="8dp"
                android:drawable="@drawable/ic_setting"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </layer-list>
    </item>
</ripple>